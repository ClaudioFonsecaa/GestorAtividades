<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <style name="MainTheme" parent="MainTheme.Base">
    

	  <item name="colorPrimaryDark">@android:color/black</item>
	  <item name="colorPrimary">@android:color/black</item>
	  <item name="colorAccent">@android:color/black</item>
	  <item name="android:datePickerDialogTheme">@style/CustomDatePickerDialog</item>
  </style>

	<!-- custom datepicker -->
	<style name="CustomDatePickerDialog" parent="ThemeOverlay.AppCompat.Dialog">
		<!--header background-->
		<item name="colorAccent">@android:color/black</item>
		<!--header textcolor-->
		<item name="android:textColorPrimaryInverse">@android:color/white</item>
		<!--body background-->
		<item name="android:windowBackground">@android:color/white</item>
		<!--selected day-->
		<item name="android:colorControlActivated">@android:color/darker_gray</item>
		<!--days of the month-->
		<item name="android:textColorPrimary">@android:color/black</item>
		<!--days of the week-->
		<item name="android:textColorSecondary">@android:color/black</item>
		<!--cancel&ok-->
		<item name="android:textColor">@android:color/black</item>
	</style>


</resources>